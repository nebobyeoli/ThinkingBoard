spring.datasource.url=jdbc:mysql://localhost:3306/dimigo?allowPublicKeyRetrieval=true&useSSL=false&characterEncoding=UTF-8&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# CamelCase 테이블명에 "_" 자동 삽입 방지
