# mysql-connector-java loaded from build.gradle
# + JPA settings

server.address=localhost
server.port=8888

#spring.mvc.static-path-pattern=/resources/**
#spring.jpa.mapping-resources=

spring.jpa.show-sql=true
spring.jpa.generate-ddl=false

